<div class="h-80 sm:h-96">
    <h2 class="text-center text-xl sm:text-2xl font-bold">Computing Facilities and Internet Bandwidth</h2>
    <canvas id="chart5"></canvas>
</div>

<script>
    import Chart from 'chart.js/auto';
    import type { chartData } from "../../../env";
    import { getChartData } from '../../../data/industrialgrowth';

    const data: chartData | undefined = getChartData(5);
    const ctx5 = document.getElementById("chart5");

    const options = {
        plugins: {
            legend: {
                display: true,
                position: 'bottom',
                labels: {
                    font: { size: 14 },
                    padding: 20,
                },
            },
        },      
        responsive: true,
        maintainAspectRatio: false,
        elements: {
            point: {
                radius: 4,
                hoverRadius: 5,
            },
            line: {
                borderWidth: 1,
            },
        },
        scales: {
            x: {
                grid: { display: false, },
            },
            y: {
                grid: { display: false, },
                title: {
                    display: true,
                    text: data?.title
                },
                min: 0,
                max: 1500,
                ticks: {
                    stepSize: 250,
                },
            }
        }
    }

    const chart = new Chart(ctx5, {
        data: data?.data,
        options: options,
    });
</script>