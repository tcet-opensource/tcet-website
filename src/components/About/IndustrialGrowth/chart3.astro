<div class="h-80 sm:h-96">
    <h1 class="text-center text-xl sm:text-2xl font-bold">Growth in Number of Employees</h1>
    <canvas id="chart3"></canvas>
</div>

<script>
    import Chart from 'chart.js/auto';
    import type { chartData } from "../../../env";
    import { getChartData } from "../../../data/industrialgrowth";

    const data: chartData | undefined = getChartData(3);
    const ctx3 = document.getElementById('chart3');

    const options = {
        plugins: {
            legend: {
                display: true,
                position: 'bottom',
                labels: {
                    font: { size: 14, },
                    padding: 20,
                }
            },
        },
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            x: {
                grid: { display: false, },
            },
            y: {
                grid: { display: false, },
                title: {
                    display: true,
                    text: data?.title,
                },
                ticks: {
                    stepSize: 100,
                },  
            }
        }
    }

    const chart = new Chart(ctx3, {
        type: 'bar',
        data: data?.data,
        options: options,
    });
</script>