<div class="h-80 sm:h-96">
    <h1 class="text-center text-xl sm:text-2xl font-bold">Growth in Sanctioned Intake by AICTE</h1>
    <canvas id="chart1" class=""></canvas>
</div>

<script>
    import Chart from 'chart.js/auto';
    import type { chartData } from "../../../env";
    import { getChartData } from "../../../data/industrialgrowth";

    const data: chartData = getChartData(1);
    const ctx1 = document.getElementById("chart1");

    const options = {
        plugins: {
            legend: {
                display: true,
                position: 'bottom',
                labels: {
                    font: { size: 14 },
                    padding: 20,
                },
            },
        },      
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            x: {
                grid: { display: false, },
            },
            y: {
                grid: { display: false, },
                title: {
                    display: true,
                    text: data.title,
                    
                },
                min: 0,
                max: 1500,
                ticks: {
                    stepSize: 250,
                },
            }
        }
    };

    const chart = new Chart(ctx1, {
        type: 'bar',
        data: data?.data,
        options: options,
    });
</script>