<div class="h-80 sm:h-96">
    <h2 class="text-center text-xl sm:text-2xl font-bold">Growth in Number of Students</h2>
    <canvas id="chart2"></canvas>
</div>

<script>
    import Chart from 'chart.js/auto';
    import type { chartData } from "../../../env";
    import { getChartData } from "../../../data/industrialgrowth";

    const data: chartData = getChartData(2);
    const ctx2 = document.getElementById("chart2");

    const options = {
        plugins: {
            legend: {
                display: true,
                position: 'bottom',
                labels: {
                    font: { size: 14 },
                    padding: 20,
                },
            },
        },      
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            x: {
                grid: { display: false, },
            },
            y: {
                grid: { display: false, },
                title: {
                    display: true,
                    text: data.title,
                },
                min: 0,
                max: 1500,
                ticks: {
                    stepSize: 250,
                },
            }
        }
    }

    const chart = new Chart(ctx2, {
        type: 'bar',
        data: data?.data,
        options: options,
    });
</script>